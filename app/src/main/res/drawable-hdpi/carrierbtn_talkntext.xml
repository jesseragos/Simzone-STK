<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <!-- <corners android:radius="3dip" /> -->
            <stroke android:width="1dip" android:color="#ff848535" />
            <gradient android:angle="-90" android:startColor="#ff787911" android:endColor="#ff949a4e"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <!-- <corners android:radius="3dip" /> -->
            <stroke android:width="1dip" android:color="#ff79791d" />
            <solid android:color="#ff858344"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <!-- <corners android:radius="3dip" /> -->
            <stroke android:width="1dip" android:color="#ff77792d" />
            <gradient android:angle="-90" android:startColor="#ffb9ba32" android:endColor="#ff858534" />
        </shape>
    </item>
</selector>