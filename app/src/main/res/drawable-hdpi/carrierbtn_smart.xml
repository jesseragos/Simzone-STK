<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <!-- <corners android:radius="3dip" /> -->
            <stroke android:width="1dip" android:color="#ff1d7a85" />
            <gradient android:angle="-90" android:startColor="#ff2e7179" android:endColor="#ff18919a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <!-- <corners android:radius="3dip" /> -->
            <stroke android:width="1dip" android:color="#ff287379" />
            <solid android:color="#ff1d7a85"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <!-- <corners android:radius="3dip" /> -->
            <stroke android:width="1dip" android:color="#ff2e7179" />
            <gradient android:angle="-90" android:startColor="#ff33a8ba" android:endColor="#ff257185" />
        </shape>
    </item>
</selector>