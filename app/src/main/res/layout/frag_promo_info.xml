<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/promo_list_item">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SUPERSURF50"
        android:id="@+id/promo_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/promo_desc"
        android:layout_below="@+id/promo_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/std_msg"
        android:layout_toStartOf="@+id/promo_cost"
        android:layout_toLeftOf="@+id/promo_cost"
        android:text="Validity: 1 Day - 50 texts to other networks, 50 Sun Texts, 10 minutes calls to Sun, Smart and Talk 'N Text, 10 minutes of mobile internet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="P50"
        android:id="@+id/promo_cost"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/promo_desc"
        android:singleLine="false"
        android:gravity="center" />

</RelativeLayout>
